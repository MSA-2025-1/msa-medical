<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.emr.slgi.reservation.dao.SlotDAO">

    <select id="checkSlotExistence">
        SELECT
            COUNT(*)
        FROM
            TB_SLOT
        WHERE
            ID = #{slotId}
    </select>

    <select id="selectSlotForUpdate">
        SELECT
            COUNT(*)
        FROM
            TB_SLOT
        WHERE
            ID = #{slotId}
            FOR UPDATE;
    </select>

</mapper>