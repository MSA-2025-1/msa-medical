<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.emr.slgi.reservation.dao.SlotDAO">

    <sql id="afterToday">
        SLOT > #{dateTime}
    </sql>

    <sql id="today">
        <![CDATA[
        SLOT >= #{dateTime}
        AND
        SLOT < DATE_ADD(DATE(#{dateTime}), INTERVAL 1 DAY)
        ]]>
    </sql>

    <select id="checkSlotExistence">
        SELECT
            COUNT(*)
        FROM
            TB_SLOT
        WHERE
            ID = #{slotId}
    </select>

    <select id="selectSlotForUpdate">
        SELECT
            COUNT(*)
        FROM
            TB_SLOT
        WHERE
            ID = #{slotId}
            FOR UPDATE;
    </select>

    <select id="getAllSlots">
        SELECT
            *
        FROM
            TB_SLOT
        WHERE
        <choose>
            <when test="isToday">
                <include refid="today"/>
            </when>
            <otherwise>
                <include refid="afterToday"/>
            </otherwise>
        </choose>
    </select>

</mapper>